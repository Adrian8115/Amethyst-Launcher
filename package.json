{
  "name": "amethyst-launcher",
  "version": "2.4.8",
  "author": "FrederoxDev, Adrian8115",
  "description": "Amethyst Launcher",
  "main": "electron/main.cjs",
  "type": "module",
  "scripts": {
    "start-vite": "vite --port 3000",
    "start-electron": "electron .",
    "build": "npm run build:vite && npm run build:electron",
    "build:vite": "tsc -b && vite build",
    "build:electron": "electron-builder -w",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "bump-version": "npm version patch --no-git-tag-version"
  },
  "dependencies": {
    "electron-updater": "^6.2.1",
    "jszip": "^3.10.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.24.0",
    "regedit-rs": "^1.0.2",
    "sudo-prompt": "^9.2.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "autoprefixer": "^10.4.19",
    "electron": "^31.1.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "postcss": "^8.4.39",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.2.2",
    "vite": "^5.3.1",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "build": {
    "productName": "Amethyst-Launcher",
    "appId": "com.frederoxdev.amethystlauncher",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "build/**/*",
      "electron/main.cjs",
      "electron/preload.cjs",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "${productName}-${version}.exe"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "FrederoxDev",
        "repo": "Amethyst-Launcher"
      }
    ],
    "fileAssociations": [
      {
        "ext": [
          ".amethyst",
          ".amth"
        ],
        "name": "Amethyst Mod",
        "role": "Editor",
        "icon": "public/icons/icon.ico"
      }
    ]
  }
}
